<h1>Lista de Autores</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to image_tag("icoVisualizar.gif", :alt => "Mostrar", :title => "Mostrar"), author %></td>
        <td><%= link_to image_tag("icoEditar.gif", :alt => "Editar", :title => "Editar"), edit_author_path(author) %></td>
        <td><%= link_to image_tag("icoEliminar.gif", :alt => "Eliminar", :title => "Eliminar"), author, method: :delete, data: { confirm: 'Â¿Esta Seguro de Eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

